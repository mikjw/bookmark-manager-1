<form action="/bookmarks/<%= @bookmark.id %>" method="post">
  <input type="hidden" name="_method" value="PATCH" />
  <input style="color: gray" type="text" name="url" value="<%= @bookmark.url %>" />
  <input style="color: gray" type="text" name="title" value="<%= @bookmark.title %>" />
  <input type="submit" value="Submit" />
</form>